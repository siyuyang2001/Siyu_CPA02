<br>
<h2>Course Schedule:</h2>

<div class="d-flex flex-wrap overflow-scroll">
    <br>
    <% for (course of courses) { %>
        <div class="p-3 m-3 border border-primary bg-light w-25">
            <a href="/schedule/remove/<%= course._id %>">X</a>
            <span>
                <%= course.subject %> 
                <%= course.coursenum %> 
                <%= course.term %> 
            </span>
            <strong><%= course.name %></strong>
            
            <div class="mb-1">
                <%=course.instructor[0] %>
                <%=course.instructor[1] %>
                (<%=course.instructor[2] %>)
            </div>
            <div class="mb-1">
               Enrollment: <%=course.enrolled %>,
               Limit: <%=course.limit || 999 %>,
               Waitlist: <%= course.waiting %>
               <br>
               Times: <%= course.strTimes %>
            </div>
            <hr>
            <div class="">
                <em><%=course.details %></em>
            </div>
            <div class="p-3">
                <%=course.description %>
            </div>
        </div>
    <% } %>
</div>